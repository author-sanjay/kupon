generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email          String   @unique
  firstName      String
  lastName       String
  middleName     String?
  isCompany      Boolean  @default(false)
  hash           String
  walletAddress  String
  ownedCoupons   Coupon[] @relation("UserOwnsCoupons")
  createdCoupons Coupon[] @relation("UserCreatesCoupons")

  @@map("users")
}

model Coupon {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  discount    Float
  platform    String
  description String?
  photoUrl    String?
  expiry      DateTime
  isUsed      Boolean  @default(false)
  nftAddress  String

  ownedBy Int
  owner   User @relation("UserOwnsCoupons", fields: [ownedBy], references: [id])

  createdBy Int
  creator   User @relation("UserCreatesCoupons", fields: [createdBy], references: [id])

  @@map("coupons")
}
